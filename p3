#!/usr/bin/env python3
"""
Unified p3 CLI wrapper - routes to Python implementation
This replaces the old shell script with a proper Python CLI system
"""
import sys
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

# Import and run the CLI
try:
    # Import the P3CLI class directly to avoid circular import
    import importlib.util
    spec = importlib.util.spec_from_file_location("p3_cli", project_root / "p3.py")
    p3_module = importlib.util.module_from_spec(spec)
    spec.loader.exec_module(p3_module)
    p3_module.main()
except Exception as e:
    print(f"Error importing p3 module: {e}")
    print("Falling back to shell implementation...")
    import subprocess
    subprocess.run([str(project_root / "p3_old_shell")] + sys.argv[1:])